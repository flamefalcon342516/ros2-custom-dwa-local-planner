<?xml version="1.0"?>
<robot name="differential_drive_robot_4wheels_static_front">

  <!-- MATERIALS -->
  <material name="yellow_material"><color rgba="1 1 0 1"/></material>
  <material name="red_material"><color rgba="1 0 0 1"/></material>
  <material name="black_material"><color rgba="0 0 0 1"/></material>

  <!-- MAIN BODY -->
  <link name="body_link">
    <inertial>
      <mass value="5.0"/>
      <inertia ixx="0.2" ixy="0" ixz="0" iyy="0.3" iyz="0" izz="0.4"/>
    </inertial>
    <visual>
      <geometry><box size="1.0 0.6 0.2"/></geometry>
      <material name="red_material"/>
    </visual>
    <collision>
      <geometry><box size="1.0 0.6 0.2"/></geometry>
    </collision>
  </link>

  <!-- LEFT DRIVE WHEEL -->
  <joint name="left_wheel_joint" type="continuous">
    <parent link="body_link"/>
    <child link="left_wheel_link"/>
    <origin xyz="0.3 0.35 -0.1" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="left_wheel_link">
    <inertial>
      <mass value="0.4"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.001"/>
    </inertial>
    <visual>
      <origin rpy="1.57 0 0"/>
      <geometry><cylinder radius="0.15" length="0.1"/></geometry>
      <material name="yellow_material"/>
    </visual>
    <collision>
      <origin rpy="1.57 0 0"/>
      <geometry><cylinder radius="0.15" length="0.1"/></geometry>
    </collision>
  </link>

  <!-- RIGHT DRIVE WHEEL -->
  <joint name="right_wheel_joint" type="continuous">
    <parent link="body_link"/>
    <child link="right_wheel_link"/>
    <origin xyz="0.3 -0.35 -0.1" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="right_wheel_link">
    <inertial>
      <mass value="0.4"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.001"/>
    </inertial>
    <visual>
      <origin rpy="1.57 0 0"/>
      <geometry><cylinder radius="0.15" length="0.1"/></geometry>
      <material name="yellow_material"/>
    </visual>
    <collision>
      <origin rpy="1.57 0 0"/>
      <geometry><cylinder radius="0.15" length="0.1"/></geometry>
    </collision>
  </link>

  <!-- FRONT STATIC WHEELS -->
  <joint name="front_left_wheel_static_joint" type="fixed">
    <parent link="body_link"/>
    <child link="front_left_wheel_static_link"/>
    <origin xyz="-0.3 0.35 -0.1" rpy="0 0 0"/>
  </joint>

  <link name="front_left_wheel_static_link">
    <inertial>
      <mass value="0.00001"/>
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>
    <visual>
      <origin rpy="1.57 0 0"/>
      <geometry><cylinder radius="0.15" length="0.1"/></geometry>
      <material name="black_material"/>
    </visual>
    <collision>
      <origin rpy="1.57 0 0"/>
      <geometry><cylinder radius="0.15" length="0.1"/></geometry>
    </collision>
  </link>

  <joint name="front_right_wheel_static_joint" type="fixed">
    <parent link="body_link"/>
    <child link="front_right_wheel_static_link"/>
    <origin xyz="-0.3 -0.35 -0.1" rpy="0 0 0"/>
  </joint>

  <link name="front_right_wheel_static_link">
    <inertial>
      <mass value="0.00001"/>
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>
    <visual>
      <origin rpy="1.57 0 0"/>
      <geometry><cylinder radius="0.15" length="0.1"/></geometry>
      <material name="black_material"/>
    </visual>
    <collision>
      <origin rpy="1.57 0 0"/>
      <geometry><cylinder radius="0.15" length="0.1"/></geometry>
    </collision>
  </link>

  <!-- DEPTH CAMERA -->
  <joint name="camera_joint" type="fixed">
    <parent link="body_link"/>
    <child link="camera_link"/>
    <origin xyz="0.4 0 0.6" rpy="0 0 0"/>
  </joint>

  <link name="camera_link">
    <inertial>
      <mass value="0.01"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
    <visual>
      <geometry><box size="0.05 0.05 0.05"/></geometry>
      <material name="black_material"/>
    </visual>
    <collision>
      <geometry><box size="0.05 0.05 0.05"/></geometry>
    </collision>
  </link>

  <gazebo reference="camera_link">
    <sensor type="depth" name="depth_camera">
      <update_rate>30</update_rate>
      <camera>
        <horizontal_fov>1.047</horizontal_fov>
        <image>
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.1</near>
          <far>10.0</far>
        </clip>
      </camera>
      <always_on>true</always_on>
      <visualize>true</visualize>
      <plugin name="gz_camera_controller" filename="libgazebo_ros_camera.so">
        <camera_name>depth_camera</camera_name>
        <image_topic_name>/camera/image_raw</image_topic_name>
        <depth_image_topic_name>/camera/depth/image_raw</depth_image_topic_name>
        <camera_info_topic_name>/camera/camera_info</camera_info_topic_name>
        <point_cloud_topic_name>/depth_camera/points</point_cloud_topic_name>
      </plugin>
    </sensor>
  </gazebo>

  <!-- GAZEBO DIFF DRIVE PLUGIN -->
  <gazebo>
    <plugin name="diff_drive_controller" filename="libgazebo_ros_diff_drive.so">
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      <wheel_diameter>0.30</wheel_diameter>
      <wheel_separation>0.7</wheel_separation>
      <command_topic>cmd_vel</command_topic>
      <odometry_topic>odom</odometry_topic>
      <publish_tf>true</publish_tf>
      <publish_odom>true</publish_odom>
    </plugin>
  </gazebo>

</robot>
